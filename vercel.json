{
  "devCommand": "uvicorn src.api.server:app --host 0.0.0.0 --port 3001",
  "installCommand": "pip install uv && uv pip compile uv.lock -o requirements.txt",
  "builds": [
    {
      "src": "src/api/server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/api/server.py"
    }
  ]
}
